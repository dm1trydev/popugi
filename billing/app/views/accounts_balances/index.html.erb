<h1>Top Managers Income: <%= TopManagersIncomeService.calculate %></h1>

<h1>Account Balances</h1>

<table>
  <thead>
    <tr>
      <th>Public id</th>
      <th>Full name</th>
      <th>Email</th>
      <th>Role</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.public_id %></td>
        <td><%= account.full_name %></td>
        <td><%= account.email %></td>
        <td><%= account.role %></td>
        <td><%= calculate_balance_for_current_cycle(account) %></td>
        <td><%= link_to 'Audit', balance_path(account.balance) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
