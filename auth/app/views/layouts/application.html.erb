<!DOCTYPE html>
<html>
  <head>
    <title>Auth</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_account %>
      <br/>
      <%= link_to 'Log out', destroy_account_session_path, method: :delete %>
      <br/>
    <% end %>
    <% if current_account&.admin? %>
      <%= link_to 'Add new service', new_oauth_application_path %>
    <% end %>

    <%= yield %>
  </body>
</html>
