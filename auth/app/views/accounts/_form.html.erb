<%= form_for @account do |form| %>
  <%= form.label :email %>
  <%= form.text_field :email %><br/>

  <%= form.label :role %>
  <%= form.collection_select :role, Account.roles, :first, :last%><br/>

  <%= form.label :full_name %>
  <%= form.text_field :full_name %><br/>

  <%= form.submit %>
<% end %>
