<head>
  <style>
      table,
      th,
      td {
          padding: 10px;
          border: 1px solid black;
          border-collapse: collapse;
      }
  </style>
</head>
<h1>Accounts#index</h1>
<table border="1">
  <tr>
    <th>Id</th>
    <th>Public Id</th>
    <th>Email</th>
    <th>Role</th>
    <th>Full name</th>
    <th>Position</th>
    <th>Active?</th>
  </tr>

  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.id%></td>
      <td><%= account.public_id%></td>
      <td><%= account.email%></td>
      <td><%= account.role %></td>
      <td><%= account.full_name %></td>
      <td><%= account.active %></td>
      <td><%= link_to 'Edit', edit_account_path(account) %></td>
      <td><%= link_to 'Destroy', account_path(account), method: :delete %></td>
    </tr>
  <% end %>
</table>
