<%= link_to 'All Tasks', tasks_path %>
<br>

<table>
  <thead>
  <tr>
    <th>Public</th>
    <th>Title</th>
    <th>Description</th>
    <th>Status</th>
    <th>Account</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.public_id %></td>
      <td><%= task.title %></td>
      <td><%= task.description %></td>
      <td><%= task.status %></td>
      <td><%= task.account&.full_name %></td>
      <td><%= link_to 'Close', close_task_path(task), method: :post %></td>
    </tr>
  <% end %>
  </tbody>
</table>
