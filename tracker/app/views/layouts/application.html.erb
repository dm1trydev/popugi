<!DOCTYPE html>
<html>
  <head>
    <title>Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if current_account %>
      <%= link_to 'Logout', logout_path %>

      <h2>Current account</h2>
      <%= current_account.as_json %>
      <br>
    <% end %>

    <%= yield %>
  </body>
</html>
